{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src/",
    "importHelpers": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "assets/*": [
        "./src/assets/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}