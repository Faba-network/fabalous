{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./src/",
        "outDir": "./dist/"
    },

    "filesGlob": [
        "**/*.ts",
        "**/*.tsx"
    ],

    "rootDirs": [
        "./src/"
    ],

    "paths": {
        "*": ["*"]
    },
    "exclude": ["test"],
    "files": [
        "./src/core/FabaEvent.ts",
        "./typings/mongodb/mongodb.d.ts",
        "./typings/node/node.d.ts",
        "./src/FabaServer.ts",
        "./src/FabaWebApplication.ts",
        "./src/core/FabaService.ts",
        "./src/core/FabaValueObject.ts",
        "./src/core/FabaCommand.ts",
        "./src/core/FabaCore.ts",
        "./src/core/FabaModel.ts",
        "./src/transport/FabaApiConnection.ts",
        "./src/nodejs/mongodb/FabaMongoCollection.ts",
        "./src/nodejs/mongodb/FabaMongoConnection.ts",
        "./src/decorators/FabaBindable.ts",
        "./src/core/FabaEventManager.ts"
    ]
}
