{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "noEmit":false,
        "noEmitHelpers": true,
        "importHelpers":true,
        "rootDir": "./src/",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "lib":[
            "es2015",
            "dom"
        ],
        "preserveConstEnums": true,
        "pretty": true
    },

    "exclude": [
        "./files",
        "node_modules"
    ]
}