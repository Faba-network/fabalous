{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "noEmit":false,
        "noEmitHelpers": true,
        "importHelpers":true,
        "outDir": "./build",
        "rootDir": "./src/",
        "moduleResolution": "node",
        "lib":[
            "es7", "dom"
        ],
        "preserveConstEnums": true,
        "pretty": true
    },
    "exclude": [
        "node_modules",
        "files"
    ]
}